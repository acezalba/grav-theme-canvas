{% style priority: 30 %} 

{% set custom = theme_config.style.colors.custom %}

:root {
    --mono-font: Consolas, Menlo, Monaco, "Andale Mono", "Ubuntu Mono", monospace;
    --bg: {{ custom.light.bg }};
    --accent-bg: {{ custom.light.accent_bg }};
    --text: {{ custom.light.text }};
    --text-light: {{ custom.light.text_light }};
    --border: {{ custom.light.border }};
    --accent: {{ custom.light.accent }};
    --code: {{ custom.light.code }};
    --preformatted: {{ custom.light.preformatted }};
    --marked: {{ custom.light.marked }};
    --disabled: {{ custom.light.disabled }};
}


{# Dark Theme #}
@media (prefers-color-scheme: dark) {
    :root {
        color-scheme: dark;
        --bg: {{ custom.dark.bg }};
        --accent-bg: {{ custom.dark.accent_bg }};
        --text: {{ custom.dark.text }};
        --text-light: {{ custom.dark.text_light }};
        --border: {{ custom.dark.border }};
        --accent: {{ custom.dark.accent }};
        --code: {{ custom.dark.code }};
        --preformatted: {{ custom.dark.preformatted }};
        --disabled: {{ custom.dark.disabled }};
    }
    img,
    video {
        opacity: 0.8;
        }
    }
}

{% endstyle %}